<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP19.P05.Mobile.Forms.CustOptions">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Customer Options"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
             />
            <Button
            Text="Check in"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="CheckIn_Clicked" >
            </Button>
            <Button
            Text="Order"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="Order_Clicked" >
            </Button>
            <Button
            Text="Request Server"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="RequestServer_Clicked" >
            </Button>
            <Button
            Text="Reserve table"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="Reserve_Clicked" >
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>