<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP19.P05.Mobile.Forms.ManagerOption">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Manager Options"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />\
            <Button
            Text="Adjust Tables"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="AdjustTables_Clicked" >
            </Button>
            <Button
            Text="Adjust Employees"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="AdjustEmployees_Clicked" >
            </Button>
            <Button
            Text="Adjust Menu"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Clicked="AdjustMenu_Clicked" >
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>